{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "jsx": "react-jsx",
        "baseUrl": "src",
        "paths": {
            "@app/*": ["app/*"],
            "@entities/*": ["entities/*"],
            "@features/*": ["features/*"],
            "@shared/*": ["shared/*"],
            "@pages/*": ["pages/*"],
            "@widgets/*": ["widgets/*"],
            "@processes/*": ["processes/*"]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
